rule SunsetAction
when
	Item SUNSET_EVENT received update ON
then
	logInfo("chicken", "received sunset event")
	if(OPS_MODE.state == 1) {
        sendCommand(RELAY_1, OFF)
        sendCommand(RELAY_2, OFF)
	}
end
